{
  "name": "go-to-import",
  "type": "module",
  "displayName": "Go to Import",
  "description": "Navigate to files instantly with multiple methods: click, keyboard shortcuts, context menu, and status bar",
  "version": "0.0.5",
  "publisher": "luzmcosta",
  "repository": {
    "type": "git",
    "url": "https://github.com/luzmcosta/go-to-import"
  },
  "keywords": [
    "import",
    "jump",
    "vscode",
    "navigation",
    "file",
    "link",
    "click"
  ],
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": false,
      "description": "This extension requires workspace trust to access file system for security reasons."
    }
  },
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "go-to-import.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "go-to-import.jumpToImport",
        "title": "Jump to Import File"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Go to Import Configuration",
      "properties": {
        "go-to-import.enableStatusBar": {
          "type": "boolean",
          "default": true,
          "description": "Show the Go to Import button in the status bar"
        },
        "go-to-import.showHelpNotification": {
          "type": "boolean",
          "default": true,
          "description": "Show helpful notification about Cmd+Click conflicts on macOS"
        },
        "go-to-import.customKeybinding": {
          "type": "string",
          "default": "ctrl+shift+g",
          "description": "Custom keybinding for jump to import command (requires VS Code restart)"
        }
      }
    },
    "keybindings": [
      {
        "command": "go-to-import.jumpToImport",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "go-to-import.jumpToImport",
          "when": "editorTextFocus",
          "group": "navigation@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "lint:security": "eslint src --ext .ts --config eslint.config.js",
    "test": "vscode-test",
    "test:security": "npm run test -- --grep 'Security'",
    "security-audit": "npm audit --audit-level=moderate",
    "validate": "npm run check-types && npm run lint:security && npm run test:security"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "eslint": "^9.32.0",
    "esbuild": "^0.25.8",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.2",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}
